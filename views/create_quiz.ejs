<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Create A Quiz!</title>

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
  <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
  <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
  <link rel="stylesheet" href="/styles/create_quiz.css" type="text/css" />

  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
  <script type="text/javascript" src="/scripts/createQuiz.js"></script>
</head>
<body>

<!-- Testing template for functionality -->

<form method='POST' action='/quiz/create'>

  <div class='newQuizContainer'>

      <div class='newHeading'>
        <label>Quiz Title:</label>
        <input type='text' name='title' placeholder='The Best Quiz Ever!'>
        <label>URL Thumbnail:</label>
        <input type='text' name='thumbnail'>
        <label>Category:</label>
        <input type='text' name='category'> <!--Will be dropdown for selecting category-->
        <label for='listed'>Listed?</label>
        <input type="radio" id="listed" name="listed" value="true">
      </div>

      <div class='newQuestion'>
        <h2>Question 1:</h2>
        <input type='text' name='question1'>
        <label>A)</label>
        <input type='text' name='a1'>
        <input type='radio' name='correct1' value='a'>
        <label>B)</label>
        <input type='text' name='b1'>
        <input type='radio' name='correct1' value='b'>
        <label>C)</label>
        <input type='text' name='c1'>
        <input type='radio' name='correct1' value='c'>
        <label>D)</label>
        <input type='text' name='d1'>
        <input type='radio' name='correct1' value='d'>
      </div>

  </div>

  <input type='hidden' id='count' name='count' value='1'>
  <button type='button' class='addNewQuestion'>Add Another Question</button>
  <button type='submit'>Create Quiz</button>

</form>

</body>
</html>
