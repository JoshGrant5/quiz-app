<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Create A Quiz!</title>

  <!-- Bootstrap stylesheet -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
  <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
  <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
  <link rel="stylesheet" href="/styles/create_quiz.css" type="text/css" />

  <!-- Local JS scripts -->
  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
  <script type="text/javascript" src="/scripts/createQuiz.js"></script>

</head>

<header>
  <%- include('./partials/header'); %>
</header>

<body>

<form method='POST' action='/quiz/create' id='newQuizForm'>

  <div class='newQuizContainer'>

      <div class='newHeading'>
        <label>Quiz Title:</label>
        <input type='text' name='title' required='required' placeholder='The Best Quiz Ever!'>
        <label>Thumbnail:</label>
        <input type='url' id='thumbnail' name='thumbnail' placeholder='placeholder url?'>
        <button type='button' id='showPhoto'>View Thumbnail</button>
        <img id='quizPhoto' src='/imgs/temp-photo.jpg'>
        <label>Category:</label>
        <div class="dropdown">
          <label>Category:</label>
          <input type='hidden' id='categoryInput' name='category'>
          <select id='selectedCategory'>
            <% for (let category of categories) { %>
              <option class='category' required='required' value='<%= category %>'><%= category %></option>
            <% } %>
          </select>
        </div>
        <label for='listed'>Listed?</label>
        <input type="radio" id="listed" name="listed" value="true">
      </div>

      <div class='newQuestion'>
        <div>
          <h2>Question 1:</h2>
          <button type="button" class="btn btn-outline-danger" id='deleteQuestion1'>X</button>
        </div>
        <input type='text' name='question1' required='required'>
        <label>A)</label>
        <input type='text' name='a1' required='required'>
        <input type='radio' name='correct1' required='required' value='1'>
        <label>B)</label>
        <input type='text' name='b1' required='required'>
        <input type='radio' name='correct1' value='2'>
        <label>C)</label>
        <input type='text' name='c1' required='required'>
        <input type='radio' name='correct1' value='3'>
        <label>D)</label>
        <input type='text' name='d1' required='required'>
        <input type='radio' name='correct1' value='4'>
      </div>

  </div>

  <input type='hidden' id='count' name='count' value='1'>
  <button type='button' id='addNewQuestion'>Add Another Question</button>
  <button id='reviewQuiz' type='button'>Review Quiz</button>
  <button id='createQuizButton' type='submit'>Create Quiz</button>

</form>

</body>
</html>
