<h2>My Favourites</h2>

<div id="quiz-container">
  <% for (const quiz of favourites) { %>
    <article class="card quiz">
      <a href="/quiz/<%= quiz.url %>">
        <% if(!quiz.photo) quiz.photo = "../assets/quiz-placeholder.png" %>
        <img class="card-img-top" src="<%= quiz.photo %>">
        <div class="card-body">
          <h3 class="card-title"><%= quiz.title %></h3>
          <p class="card-subtitle"><%= quiz.type %> | <%= quiz.category %></p>
          <p class="card-text"><%= quiz.description %></p>
        </div>
      </a>
    </article>
  <% } %>
</div>
